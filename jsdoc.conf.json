{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc", "closure"]
    },
    "source": {
      "include": ["."],
      "includePattern": ".(jsx|js|ts|tsx)$",
      "exclude": [
          "node_modules",
          "docs"
      ]
    },
    "plugins": [
        "node_modules/better-docs/typescript"
    ],
    "typescript": {
        "moduleRoot": "test"
    },
    "templates": {
        "better-docs": {
            "name": "Kosher-Arsenal Components"
        }
    },
    "opts": {
        "template": "node_modules/better-docs",
        "destination": "./docs/", 
        "recurse": true
    }
  }